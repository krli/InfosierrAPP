<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="T_titulo">        
        <item name="android:textColor">@color/white</item>        
        <item name="android:textSize">12sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textIsSelectable">false</item>
    </style>
    
    <style name="T_subtitulo">        
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textIsSelectable">false</item>
    </style>
    
	<style name="T_sugesH">        
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textIsSelectable">false</item>
    </style>  
    
    <style name="S_buscar">
        <item name="android:background">@drawable/sv_buscar</item>
        <item name="android:textColor">@color/grisOscuro</item>     
        <item name="android:textAlignment">textEnd</item>
        <item name="android:paddingRight">4dp</item>            
        <item name="android:maxLines">1</item>
        <item name="android:minLines">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>   
        <item name="android:gravity">center_vertical|center_horizontal</item>    
    </style>
    
    
    <style name="B_buscar">
        <item name="android:background">@drawable/b_buscar</item>
        <item name="android:textColor">@color/white</item>        
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
		<item name="android:paddingLeft">25dp</item>
		<item name="android:paddingRight">25dp</item>
		<item name="android:paddingTop">5dp</item>		
		<item name="android:paddingBottom">5dp</item>       
		<item name="android:gravity">center_vertical|center_horizontal</item>
		<item name="android:alignmentMode">alignMargins</item>
    </style>
    
    <style name="B_cancelar">
        <item name="android:background">@drawable/b_cancelar</item>
        <item name="android:textColor">@color/white</item>        
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
		<item name="android:paddingLeft">5dp</item>
		<item name="android:paddingRight">5dp</item>
		<item name="android:paddingTop">0dp</item>		
		<item name="android:paddingBottom">0dp</item>
		<item name="android:gravity">center_vertical|center_horizontal</item>
		<item name="android:alignmentMode">alignMargins</item>
    </style>
    
    <style name="B_suge">
        <item name="android:background">@drawable/b_suge</item>        
        <item name="android:textColor">@color/white</item>        
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">monospace</item>
		<item name="android:paddingLeft">2dp</item>
		<item name="android:paddingRight">2dp</item>
		<item name="android:paddingTop">2dp</item>		
		<item name="android:paddingBottom">2dp</item>       
		<item name="android:gravity">center_vertical|center_horizontal</item>
		<item name="android:alignmentMode">alignMargins</item>
    </style>

    <style name="B_weather">
        <item name="android:background">@drawable/b_weather</item>        
        <item name="android:textColor">@color/white</item>        
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:typeface">serif</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>
		<item name="android:paddingTop">0dp</item>		
		<item name="android:paddingBottom">0dp</item>       
		<item name="android:gravity">center_vertical|center_horizontal</item>
		<item name="android:alignmentMode">alignMargins</item>
    </style>
    
    <style name="Lyt_Detalle">        
        <item name="android:background">@drawable/background_campo_detalle</item>                
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">2dp</item>        
    </style>
    
    <style name="T_Detalle">
        <item name="android:inputType">none</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item> 
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>
    <style name="Img_Detalle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:maxHeight">40dp</item>  
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:fadingEdgeLength">5dp</item> 
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
        <style name="Img_DetalleH">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:maxHeight">32dp</item>  
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:fadingEdgeLength">5dp</item> 
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

</resources>
